import random


def play_words():
    # Список загадываемых слов
    words = ['бензин', 'банка', 'международный', 'провожать', 'практика', 'уговаривать', 'пожар', 'последствие',
             'порождать', 'производственный', 'мотор', 'избегать', 'оценка', 'надевать', 'родной', 'способствовать',
             'изнутри', 'руководить', 'утро', 'гордый', 'деятельность', 'ну', 'вправо', 'входить', 'почта', 'носитель', 'молиться',
             'десять', 'лить', 'готовность', 'отечественный', 'твёрдо', 'построение', 'вероятный', 'кость', 'крестьянин',
             'извиняться', 'вечность', 'выведение', 'назад', 'неоднократно', 'квас', 'повесить', 'мама', 'улыбка', 'итальянский',
             'ворох', 'творчество', 'монолог', 'класс', 'содержаться', 'девятьсот', 'союз', 'избирательный', 'троллейбус', 'вязкий',
             'учреждение', 'всё-таки', 'вольный', 'толкать', 'соединять', 'звёздный', 'могучий', 'интервью', 'лук', 'инфраструктура',
             'единственный', 'интересоваться', 'больше', 'словно', 'впоследствии', 'гимн', 'вклад', 'мёртвый', 'плен', 'дух',
             'скоро', 'федерация', 'итак', 'героиня', 'юность', 'коньяк', 'сдерживать', 'сообщество', 'голод', 'изменение', 'посылать',
             'монастырь', 'вдвое', 'слегка', 'возврат', 'полёт', 'суббота', 'про', 'нация', 'ибо', 'ошибка', 'мечта', 'дыхание', 'пища']
    # Выбор рандомного слова из списка
    word = random.choice(words)
    # Список для отгаданных букв
    letters = []
    # Колличество попыток
    tries = 15

    print("Здравствуйте, добро пожаловать в ")
    # Цикл заменяющий неотгаданные буквы на *, и отображающий колличество оставшихся попыток
    while tries > 0:
        display_word = [letter if letter in letters else "*" for letter in word]
        print("Слово:", " ".join(display_word))
        print(f"Осталось попыток: {tries}")

        guess = input("Ваша буква: ").lower()
        # Определение, если буквы уже вводились
        if guess in letters:
            print("Вы уже вводили эту букву.")
            continue

        letters.append(guess)
        # Если отгаданны все буквы то ты победил
        if guess in word:
            print("Правильно")
            if all(letter in letters for letter in word):
                print("Поздравляем, вы выиграли! Загаданное слово:", word)
                return
        else:
            tries -= 1
            print("Неверно.")

    print("Вы проиграли. Слово было:", word)


play_words()
